<%- include('partials/header') %>


    <style>
        .container {
            padding-top: 20px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .product-card {
            text-decoration: none;
            color: inherit;
            display: block;
            height: 400px;
            transition: transform 0.2s, box-shadow 0.2s;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            text-decoration: none;
            border-radius: 10px;
        }

        .thumbnail.product-box {
            flex: 1;
            /* Đảm bảo các card có chiều cao bằng nhau */
            display: flex;
            flex-direction: column;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            padding: 10px;
            position: relative;
        }

        .product-image {
            width: 100%;
            height: 220px !important;
            object-fit: cover;
            border-radius: 10px;
        }

        .caption {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            margin-top: 10px;
        }

        .caption h3 {
            font-size: 18px;
            margin: 10px 0 5px 0;
            font-weight: bold;
        }

        .rating {
            margin: 5px 0;
        }

        .star {
            font-size: 18px;
            color: #ccc;
        }

        .star.filled,
        .star.half {
            color: gold;
        }
    </style>


    <img src="/img/banner.jpg" alt="Banner" style="width: 100%; max-width: 100%;">

    <div class="container">
        <h1>Chào mừng đến với My Shop</h1>
        <p>Tìm quần áo chất lượng với giá cả phải chăng.</p>

        <div class="row">
            <% products.forEach(function(product) { %>
                <div class="col-md-3">
                    <a href="/products/<%= product._id %>" class="product-card">
                        <div class="thumbnail product-box">
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
                            <div class="caption">
                                <h3>
                                    <%= product.name %>
                                </h3>

                                <div class="rating">
                                    <% for (let i=0; i < Math.floor(product.rating); i++) { %>
                                        <span class="star filled">&#9733;</span>
                                        <% } %>

                                            <% if (product.rating % 1 !==0) { %>
                                                <span class="star half">&#9733;</span>
                                                <% } %>

                                                    <% for (let i=Math.ceil(product.rating); i < 5; i++) { %>
                                                        <span class="star">&#9734;</span>
                                                        <% } %>
                                    <span
                                        style="font-size: 13px; color: gray; margin-left: 5px;">
                                        (<%= product.reviews ? product.reviews.length : 0 %>)
                                    </span>
                                </div>
                            </div>

                            <div class="price-container">
                            <!-- Hiển thị giá -->
                            <% if (product.saleprice) { %> <!-- Nếu có saleprice -->
                                <!-- Giá gốc -->
                                <div class="price original-price"
                                    style="font-size: 13px; color: gray; text-decoration: line-through;bottom: 30px;">
                                    <%= (product.price).toLocaleString('vi-VN') %> ₫
                                </div>

                                <!-- Giá khuyến mãi -->
                                <div class="price sale-price">
                                    <%= (product.saleprice).toLocaleString('vi-VN') %> ₫
                                </div>
                                <% } else { %> <!-- Nếu không có saleprice -->
                                    <!-- Hiển thị giá bình thường -->
                                    <div class="price">
                                        <%= (product.price).toLocaleString('vi-VN') %> ₫
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </a>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('partials/footer') %>
        <%- include('./partials/closingtags') %>

            <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
            </body>

            </html>