<%- include('partials/header') %>
<link rel="stylesheet" type="text/css" href="stylesheets/register.css" media="screen"/>

  <div class="container aligner">
  <div class="row aligner-item">
    <div class="col-md-6 col-md-offset-3">

  <h1>Đăng ký</h1>
  <form action="/auth/register" method="POST">

      <div class="form-group">
          <label for="username">Tên</label>
          <input type="text" class="form-control" name="username" id="username" placeholder="Nhập tên">
      </div>


      <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Địa chỉ email">
      </div>


      <div class="form-group">
          <label for="password">Mật khẩu </label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Nhập mật khẩu">
      </div>

      <div class="form-group">
          <label for="confirm_password">Xác nhận Mật khẩu</label>
          <input id="confirm_password" class="form-control" name="confirm_password" placeholder="Nhập mật khẩu lần nữa" type="password">
      </div>

      <div>
      <button class="btn btn-default" id="submit">Đăng ký</button>
      </div>


  </form>


    </div>
  </div>
  </div>

      <script src="scripts/register.js" type="text/javascript" charset="utf-8"></script>

<%- include('./partials/closingtags') %>
